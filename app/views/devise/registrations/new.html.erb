<div class="container-fluid min-vh-75 bg-light d-flex align-items-center py-5">
  <div class="container">
    <div class="row justify-content-center">
      <div class="col-12 col-md-6 col-lg-4">
        <div class="card shadow-sm border-0">
          <div class="card-body p-4 p-md-5">
            <div class="text-center mb-4">
              <h1 class="h3 text-primary fw-bold">Criar Conta</h1>
              <p class="text-muted">Comece sua jornada fitness</p>
            </div>

            <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
              <%= render "devise/shared/error_messages", resource: resource %>

              <div class="mb-3">
                <%= f.label :email, "Email", class: "form-label fw-medium" %>
                <%= f.text_field :email, autofocus: true, 
                    class: "form-control form-control-lg",
                    placeholder: "Seu Email" %>
              </div>

              <div class="mb-3">
                <%= f.label :email, class: "form-label fw-medium" %>
                <%= f.email_field :email, autocomplete: "email", 
                    class: "form-control form-control-lg",
                    placeholder: "seu@email.com" %>
              </div>

              <div class="mb-3">
                <%= f.label :password, class: "form-label fw-medium" %>
                <%= f.password_field :password, autocomplete: "new-password", 
                    class: "form-control form-control-lg" %>
                <div class="form-text">MÃ­nimo de 6 caracteres</div>
              </div>

              <div class="mb-3">
                <%= f.label :password_confirmation, class: "form-label fw-medium" %>
                <%= f.password_field :password_confirmation, autocomplete: "new-password", 
                    class: "form-control form-control-lg" %>
              </div>

              <%= f.submit "Cadastrar", class: "btn btn-primary btn-lg w-100 mb-3" %>
              
              <div class="text-center">
                <%= render "devise/shared/links" %>
              </div>
            <% end %>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>